---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import ScrollHandler from "@/components/ScrollHandler.astro";
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title || "DALC Studios — Diseño Web en El Salvador"}</title>
  </head>

  <body class="min-h-screen text-white" style="background: var(--background);">
    <Navbar />
    <slot />
    <ScrollHandler />
  </body>
</html>
