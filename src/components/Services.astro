---
import { AuroraText } from "@/components/ui/aurora-text";
import { TypingAnimation } from "@/components/ui/typing-animation";
import { SparklesText } from "@/components/ui/sparkles-text";
import { ShinyButton } from "@/components/ui/shiny-button";
import { LightRays } from "@/components/ui/light-rays";
import { ArrowRight, CircleCheck, Zap, Bug, CheckCheck } from "lucide-react";
import { TextAnimate } from "@/components/ui/text-animate";
---

<section
  aria-labelledby="services-heading"
  role="region"
  class="relative text-white pt-8 md:pt-16 lg:pt-24"
  itemscope
  itemtype="https://schema.org/Service"
>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- HEADER - OPTIMIZADO PARA MOBILE -->
    <header
      id="services"
      class="text-center mb-8 sm:mb-12 lg:mb-16 max-w-3xl mx-auto"
    >
      <!-- AuroraText se mantiene (es CSS puro, no bloquea) -->
      <div class="md:hidden">
        <AuroraText
          client:only="react"
          className="text-3xl sm:text-4xl font-extrabold leading-tight mb-3"
          colors={["#3b82f6", "#60a5fa", "#93c5fd", "#bfdbfe"]}
        >
          Servicios de Desarrollo Web Profesional
        </AuroraText>
      </div>
      
      <!-- Versión desktop con TextAnimate -->
      <div class="hidden md:block">
        <TextAnimate client:only="react" animation="blurInUp" delay={0.1}>
          <AuroraText
            client:only="react"
            className="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-3 sm:mb-4"
            colors={["#3b82f6", "#60a5fa", "#93c5fd", "#bfdbfe"]}
          >
            Servicios de Desarrollo Web Profesional
          </AuroraText>
        </TextAnimate>
      </div>

      <!-- Descripción - Mobile: texto estático -->
      <div class="md:hidden">
        <p
          class="text-gray-300 text-base sm:text-lg leading-relaxed px-2 sm:px-0"
          aria-describedby="services-heading"
        >
          Soluciones web profesionales que elevan la <strong
            class="text-blue-400">visibilidad</strong
          > y el
          <strong class="text-blue-400"> rendimiento</strong> de tu negocio.
        </p>
      </div>
      
      <!-- Descripción - Desktop: con animación -->
      <div class="hidden md:block">
        <TextAnimate client:only="react" animation="blurInUp" delay={0.2}>
          <p
            class="text-gray-300 text-lg lg:text-xl leading-relaxed"
            aria-describedby="services-heading"
          >
            Soluciones web profesionales que elevan la <strong
              class="text-blue-400">visibilidad</strong
            > y el
            <strong class="text-blue-400"> rendimiento</strong> de tu negocio. Optimizadas
            para SEO, conversiones y experiencia de usuario.
          </p>
        </TextAnimate>
      </div>
    </header>

    <!-- GRID DE SERVICIOS -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-5 lg:gap-6"
    >
      <!-- 1. Carta Principal - Landings & Sitios Web -->
      <article
        aria-labelledby="service-main-title"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          col-span-1 md:col-span-2 lg:col-span-2
          rounded-2xl sm:rounded-3xl p-5 sm:p-6
          bg-gradient-to-br from-white/5 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          shadow-2xl shadow-blue-500/10 hover:shadow-blue-500/20
          transition-all duration-300
          md:hover:-translate-y-1
          md:row-span-1"
      >
        <meta itemprop="category" content="Desarrollo Web" />
        <meta itemprop="areaServed" content="España, Latinoamérica" />

        <!-- LightRays solo en desktop -->
        <div class="hidden md:block absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden">
          <LightRays client:only="react" count={9} blur={40} speed={12} />
        </div>

        <div
          class="relative z-10 flex flex-col md:flex-row gap-5 md:gap-6 items-center"
        >
          <div class="flex-1">
            <p
              class="text-xs sm:text-sm uppercase opacity-70 tracking-wider mb-2"
            >
              <!-- SparklesText solo en desktop -->
              <span class="md:hidden">Servicio Principal</span>
              <span class="hidden md:inline">
                <SparklesText className="text-sm sm:text-md" client:only="react">
                  Servicio Principal
                </SparklesText>
              </span>
            </p>

            <h2
              id="service-main-title"
              class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2"
            >
              <span itemprop="name" class="sr-only"
                >Diseño y Desarrollo Web</span
              >
              <!-- TypingAnimation solo en desktop -->
              <span class="md:hidden">Landing Pages & Sitios Web</span>
              <span class="hidden md:inline">
                <TypingAnimation
                  client:only="react"
                  words={[
                    "Landing Pages",
                    "Sitios Web",
                    "Tiendas Online",
                    "Aplicaciones Web",
                  ]}
                  loop={true}
                  duration={80}
                  className="text-white"
                  cursorStyle="line"
                  showCursor
                  blinkCursor
                />
              </span>
            </h2>

            <p
              class="mb-3 text-gray-300 text-sm sm:text-base"
              itemprop="description"
            >
              Diseño moderno y responsive, <strong>optimizado para SEO</strong>,
              conversiones y alto rendimiento.
            </p>

            <div class="space-y-1.5 mb-3 sm:mb-4">
              <div
                class="flex items-center gap-2 text-sm text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={16}
                />
                <span>Diseño 100% responsive (mobile-first)</span>
              </div>
              <div
                class="flex items-center gap-2 text-sm text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={16}
                />
                <span>Optimización SEO técnica y on-page</span>
              </div>
              <div
                class="flex items-center gap-2 text-sm text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={16}
                />
                <span>Velocidad de carga optimizada</span>
              </div>
            </div>

            <!-- ShinyButton reemplazado por botón estático en mobile -->
            <div class="md:hidden">
              <a
                data-scroll="pricing"
                class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-bold text-sm px-5 py-2.5 rounded-lg transition-colors group"
                aria-label="Cotizar diseño web optimizado para SEO"
              >
                Cotizar Ahora - Mejorar SEO
                <ArrowRight
                  className="transition-transform duration-300 group-hover:translate-x-1"
                  size={14}
                />
              </a>
            </div>
            
            <div class="hidden md:block">
              <ShinyButton
                client:only="react"
                className="w-full sm:w-fit group"
                data-scroll="pricing"
                aria-label="Cotizar diseño de sitio web o landing page optimizado para SEO"
                title="Cotizar diseño web profesional"
                itemProp="url"
              >
                <span
                  class="inline-flex items-center gap-2 text-white font-bold text-sm sm:text-base"
                >
                  Cotizar Ahora - Mejorar SEO
                  <ArrowRight
                    className="transition-transform duration-300 group-hover:translate-x-1"
                    size={16}
                  />
                </span>
              </ShinyButton>
            </div>
          </div>

          <div class="flex-1 flex justify-center md:justify-end mt-4 md:mt-0">
            <img
              src="/images/landing-page-design.webp"
              alt="Diseño profesional de landing pages optimizadas para SEO y conversiones"
              width="350"
              height="260"
              loading="lazy"
              class="w-full max-w-xs sm:max-w-sm md:max-w-md h-auto object-contain opacity-90
                drop-shadow-[0_0_16px_rgba(59,130,246,0.5)]
                transition-transform duration-300 hover:scale-105
                hidden sm:block"
              itemprop="image"
            />
          </div>
        </div>
      </article>

      <!-- 2. Reparaciones Web -->
      <article
        role="article"
        aria-label="Servicio de reparaciones web y corrección de errores para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-4 sm:p-5
          bg-gradient-to-br from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          md:hover:bg-gradient-to-br md:hover:from-white/15 md:hover:via-white/10 md:hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 md:hover:shadow-blue-500/15
          group cursor-pointer md:hover:-translate-y-1
          md:row-start-2"
      >
        <meta itemprop="category" content="Reparaciones Técnicas" />

        <!-- LightRays solo en desktop -->
        <div class="hidden md:block absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden">
          <LightRays client:only="react" count={7} blur={36} speed={13} />
        </div>

        <a data-scroll="pricing" class="relative z-10 space-y-3">
          <div
            class="w-14 h-14 sm:w-16 sm:h-16 rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20
              border border-white/10 flex items-center justify-center mx-auto"
            aria-hidden="true"
          >
            <Bug size={28} className="sm:size-32 text-white/90" />
          </div>

          <div class="text-center">
            <h3
              class="text-lg sm:text-xl font-bold mb-1"
              itemprop="name"
            >
              Reparaciones Web
            </h3>
            <p class="text-blue-400 text-xs sm:text-sm font-semibold">
              Soluciones SEO Técnicas
            </p>
          </div>

          <p
            class="text-center text-gray-300 text-sm"
            itemprop="description"
          >
            Corrección rápida de errores que afectan tu <strong
              >SEO y rendimiento</strong
            >.
          </p>

          <div class="pt-2 border-t border-white/10">
            <ul class="text-xs sm:text-sm text-gray-400 space-y-1">
              <li class="flex items-center gap-2">
                <span class="text-green-400">✓</span>
                <span>Errores de indexación Google</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-400">✓</span>
                <span>Problemas de velocidad</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-400">✓</span>
                <span>Errores 404 y enlaces rotos</span>
              </li>
            </ul>
          </div>
        </a>
      </article>

      <!-- 3. Optimización de Velocidad -->
      <article
        role="article"
        aria-label="Servicio de optimización de velocidad del sitio web para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-4 sm:p-5
          bg-gradient-to-br from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          md:hover:bg-gradient-to-br md:hover:from-white/15 md:hover:via-white/10 md:hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 md:hover:shadow-blue-500/15
          group cursor-pointer md:hover:-translate-y-1
          md:row-start-2"
      >
        <meta itemprop="category" content="Optimización Web" />

        <!-- LightRays solo en desktop -->
        <div class="hidden md:block absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden">
          <LightRays client:only="react" count={7} blur={36} speed={12} />
        </div>

        <a data-scroll="pricing" class="relative z-10 space-y-3">
          <div
            class="w-14 h-14 sm:w-16 sm:h-16 rounded-full bg-gradient-to-br from-green-500/20 to-emerald-500/20
              border border-white/10 flex items-center justify-center mx-auto"
            aria-hidden="true"
          >
            <Zap size={28} className="sm:size-32 text-white/90" />
          </div>

          <div class="text-center">
            <h3
              class="text-lg sm:text-xl font-bold mb-1"
              itemprop="name"
            >
              Optimización Web
            </h3>
            <p class="text-green-400 text-xs sm:text-sm font-semibold">
              Core Web Vitals
            </p>
          </div>

          <p
            class="text-center text-gray-300 text-sm"
            itemprop="description"
          >
            Mejora tus <strong>Core Web Vitals</strong> y el posicionamiento SEO.
          </p>

          <div class="pt-2 border-t border-white/10">
            <div class="text-center">
              <p class="text-xs text-gray-400 mb-1">
                Métricas que mejoramos:
              </p>
              <div
                class="flex justify-center gap-3 sm:gap-4 text-xs"
              >
                <div class="text-center">
                  <div class="text-green-400 font-bold text-sm">LCP</div>
                  <div class="text-gray-500 text-xs">‹ 2.5s</div>
                </div>
                <div class="text-center">
                  <div class="text-green-400 font-bold text-sm">FID</div>
                  <div class="text-gray-500 text-xs">‹ 100ms</div>
                </div>
                <div class="text-center">
                  <div class="text-green-400 font-bold text-sm">CLS</div>
                  <div class="text-gray-500 text-xs">‹ 0.1</div>
                </div>
              </div>
            </div>
          </div>
        </a>
      </article>

      <!-- 4. Mantenimiento Web -->
      <article
        role="article"
        aria-label="Servicio de mantenimiento y soporte web continuo para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-4 sm:p-5
          flex flex-col
          bg-gradient-to-b from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          md:hover:bg-gradient-to-b md:hover:from-white/15 md:hover:via-white/10 md:hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 md:hover:shadow-blue-500/15
          group overflow-hidden cursor-pointer md:hover:-translate-y-1
          md:col-span-2 md:row-start-3
          lg:col-span-1 lg:row-start-1 lg:row-span-2"
      >
        <meta itemprop="category" content="Mantenimiento Web" />

        <!-- LightRays solo en desktop -->
        <div class="hidden md:block absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden">
          <LightRays client:only="react" count={8} blur={40} speed={14} />
        </div>

        <a data-scroll="pricing" class="relative z-10 flex-1">
          <p class="text-xs uppercase opacity-70 font-semibold tracking-wider">
            Mantenimiento Web Esencial
          </p>

          <h3
            class="text-lg sm:text-xl md:text-2xl font-bold mt-1 mb-2"
            itemprop="name"
          >
            Soporte Continuo SEO
          </h3>

          <p
            class="text-gray-300 text-sm leading-relaxed mb-3"
            itemprop="description"
          >
            Mantén tu sitio actualizado, seguro y <strong
              >optimizado para SEO</strong
            > sin interrupciones.
          </p>

          <!-- Imagen solo en desktop -->
          <div class="hidden md:flex w-full justify-center my-4">
            <img
              src="/images/maintenance_services.webp"
              alt="Servicio de mantenimiento web profesional para mantener SEO y seguridad"
              width="220"
              height="220"
              loading="lazy"
              class="w-40 sm:w-44 h-auto object-contain opacity-90
                drop-shadow-[0_0_12px_rgba(59,130,246,0.45)]
                transition-transform duration-300 group-hover:scale-105"
              itemprop="image"
            />
          </div>
        </a>

        <!-- Lista de beneficios SEO -->
        <ul
          class="relative z-10 mt-3 space-y-1.5 text-gray-300 text-sm leading-snug"
        >
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-sm flex-shrink-0 mt-0.5"
              ><CircleCheck size={14} /></span
            >
            <span class="text-xs sm:text-sm"
              ><strong>Actualizaciones SEO:</strong> Plugins, CMS y optimizaciones
              mensuales</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-sm flex-shrink-0 mt-0.5"
              ><CircleCheck size={14} /></span
            >
            <span class="text-xs sm:text-sm"
              ><strong>Seguridad y Monitoreo:</strong> Protección SEO y prevención
              de caídas</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-sm flex-shrink-0 mt-0.5"
              ><CircleCheck size={14} /></span
            >
            <span class="text-xs sm:text-sm"
              ><strong>Optimización Continua:</strong> Rendimiento y respaldos automáticos</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-sm flex-shrink-0 mt-0.5"
              ><CircleCheck size={14} /></span
            >
            <span class="text-xs sm:text-sm"
              ><strong>Reportes SEO:</strong> Análisis mensual de posicionamiento
              y métricas</span
            >
          </li>
        </ul>

        <div class="relative z-10 mt-4 pt-3 border-t border-white/10">
          <a
            data-scroll="contact"
            class="block text-center text-blue-400 hover:text-blue-300 text-xs sm:text-sm font-semibold transition-colors"
            aria-label="Más información sobre mantenimiento web para SEO"
          >
            Garantiza tu posicionamiento
          </a>
        </div>
      </article>
    </div>

    <!-- Microdatos SEO adicionales (se mantiene igual) -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ItemList",
        itemListElement: [
          {
            "@type": "Service",
            position: 1,
            name: "Diseño y Desarrollo Web",
            description:
              "Diseño de landing pages y sitios web optimizados para SEO, conversiones y rendimiento",
            offers: {
              "@type": "Offer",
              category: "Desarrollo Web",
            },
          },
          {
            "@type": "Service",
            position: 2,
            name: "Mantenimiento Web SEO",
            description:
              "Soporte continuo para mantener sitios web actualizados, seguros y optimizados para buscadores",
            offers: {
              "@type": "Offer",
              category: "Mantenimiento Web",
            },
          },
          {
            "@type": "Service",
            position: 3,
            name: "Reparaciones Web Técnicas",
            description:
              "Corrección de errores que afectan el SEO y rendimiento de sitios web",
            offers: {
              "@type": "Offer",
              category: "Reparaciones Técnicas",
            },
          },
          {
            "@type": "Service",
            position: 4,
            name: "Optimización de Velocidad Web",
            description:
              "Mejora de Core Web Vitals y velocidad de carga para mejor posicionamiento SEO",
            offers: {
              "@type": "Offer",
              category: "Optimización Web",
            },
          },
        ],
      })}
    />
  </div>
</section>