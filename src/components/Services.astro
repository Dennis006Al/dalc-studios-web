---
import { AuroraText } from "@/components/ui/aurora-text";
import { TypingAnimation } from "@/components/ui/typing-animation";
import { SparklesText } from "@/components/ui/sparkles-text";
import { ShinyButton } from "@/components/ui/shiny-button";
import { LightRays } from "@/components/ui/light-rays";
import { ArrowRight, CircleCheck, Zap, Bug, CheckCheck } from "lucide-react";
import { TextAnimate } from "@/components/ui/text-animate";
---

<section
  aria-labelledby="services-heading"
  role="region"
  class="relative text-white pt-8 md:pt-16 lg:pt-24"
  itemscope
  itemtype="https://schema.org/Service"
>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- HEADER -->
    <header
      id="services"
      class="text-center mb-12 sm:mb-16 lg:mb-20 max-w-3xl mx-auto"
    >
      <TextAnimate client:only="react" animation="blurInUp" delay={0.1}>
        <AuroraText
          client:only="react"
          className="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-3 sm:mb-4"
          colors={["#3b82f6", "#60a5fa", "#93c5fd", "#bfdbfe"]}
        >
          Servicios de Desarrollo Web Profesional
        </AuroraText>
      </TextAnimate>

      <TextAnimate client:only="react" animation="blurInUp" delay={0.2}>
        <p
          class="text-gray-300 text-base sm:text-lg lg:text-xl leading-relaxed px-2 sm:px-0"
          aria-describedby="services-heading"
        >
          Soluciones web profesionales que elevan la <strong
            class="text-blue-400">visibilidad</strong
          > y el
          <strong class="text-blue-400"> rendimiento</strong> de tu negocio. Optimizadas
          para SEO, conversiones y experiencia de usuario.
        </p>
      </TextAnimate>
    </header>

    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8"
    >
      <!-- 1. Carta Principal - Landings & Sitios Web -->
      <article
        aria-labelledby="service-main-title"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          col-span-1 md:col-span-2 lg:col-span-2
          rounded-2xl sm:rounded-3xl p-6 sm:p-8
          bg-gradient-to-br from-white/5 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          shadow-2xl shadow-blue-500/10 hover:shadow-blue-500/20
          transition-all duration-300
          hover:-translate-y-1
          md:row-span-1"
      >
        <meta itemprop="category" content="Desarrollo Web" />
        <meta itemprop="areaServed" content="España, Latinoamérica" />

        <div
          class="absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden"
        >
          <LightRays client:only="react" count={9} blur={40} speed={12} />
        </div>

        <div
          class="relative z-10 flex flex-col md:flex-row gap-6 md:gap-8 items-center"
        >
          <div class="flex-1">
            <p
              class="text-xs sm:text-sm uppercase opacity-70 tracking-wider mb-2"
            >
              <SparklesText className="text-sm sm:text-md" client:only="react">
                Servicio Principal
              </SparklesText>
            </p>

            <h2
              id="service-main-title"
              class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2 sm:mb-3"
            >
              <span itemprop="name" class="sr-only"
                >Diseño y Desarrollo Web</span
              >
              <TypingAnimation
                client:only="react"
                words={[
                  "Landing Pages",
                  "Sitios Web",
                  "Tiendas Online",
                  "Aplicaciones Web",
                ]}
                loop={true}
                duration={80}
                className="text-white"
                cursorStyle="line"
                showCursor
                blinkCursor
              />
            </h2>

            <p
              class="mb-3 sm:mb-4 text-gray-300 text-sm sm:text-base md:text-lg"
              itemprop="description"
            >
              Diseño moderno y responsive, <strong>optimizado para SEO</strong>,
              conversiones y alto rendimiento. Mejora tu visibilidad en Google y
              convierte visitantes en clientes.
            </p>

            <div class="space-y-2 sm:space-y-3 mb-4 sm:mb-6">
              <div
                class="flex items-center gap-2 text-sm sm:text-base text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={18}
                />
                <span>Diseño 100% responsive (mobile-first)</span>
              </div>
              <div
                class="flex items-center gap-2 text-sm sm:text-base text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={18}
                />
                <span>Optimización SEO técnica y on-page</span>
              </div>
              <div
                class="flex items-center gap-2 text-sm sm:text-base text-gray-300"
              >
                <CircleCheck
                  className="text-green-400 flex-shrink-0"
                  size={18}
                />
                <span>Velocidad de carga optimizada (Core Web Vitals)</span>
              </div>
            </div>

            <ShinyButton
              client:only="react"
              className="w-full sm:w-fit group"
              data-scroll="pricing"
              aria-label="Cotizar diseño de sitio web o landing page optimizado para SEO"
              title="Cotizar diseño web profesional"
              itemProp="url"
            >
              <span
                class="inline-flex items-center gap-2 text-white font-bold text-sm sm:text-base"
              >
                Cotizar Ahora - Mejorar SEO
                <ArrowRight
                  className="transition-transform duration-300 group-hover:translate-x-1"
                  size={16}
                />
              </span>
            </ShinyButton>
          </div>

          <div class="flex-1 flex justify-center md:justify-end">
            <img
              src="/images/landing-page-design.webp"
              alt="Diseño profesional de landing pages optimizadas para SEO y conversiones - Desarrollo web responsive"
              width="400"
              height="300"
              loading="lazy"
              class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg h-auto object-contain opacity-90
    drop-shadow-[0_0_16px_rgba(59,130,246,0.5)]
    transition-transform duration-300 hover:scale-105
    hidden sm:block"
              itemprop="image"
            />
          </div>
        </div>
      </article>

      <!-- Reparaciones Web -->
      <article
        role="article"
        aria-label="Servicio de reparaciones web y corrección de errores para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-5 sm:p-6 md:p-8
          bg-gradient-to-br from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          hover:bg-gradient-to-br hover:from-white/15 hover:via-white/10 hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 hover:shadow-blue-500/15
          group cursor-pointer hover:-translate-y-1
          md:row-start-2"
      >
        <meta itemprop="category" content="Reparaciones Técnicas" />

        <div
          class="absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden"
        >
          <LightRays client:only="react" count={7} blur={36} speed={13} />
        </div>

        <div class="relative z-10 space-y-3 sm:space-y-4">
          <div
            class="w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20
              border border-white/10 flex items-center justify-center mx-auto"
            aria-hidden="true"
          >
            <Bug size={40} className="sm:size-56 text-white/90" />
          </div>

          <div class="text-center">
            <ShinyButton
              client:only="react"
              textOnly
              className="pointer-events-none"
            >
              <h3
                class="text-xl sm:text-2xl md:text-3xl font-bold mb-1"
                itemprop="name"
              >
                Reparaciones Web
              </h3>
            </ShinyButton>
            <p class="text-blue-400 text-sm font-semibold">
              Soluciones SEO Técnicas
            </p>
          </div>

          <p
            class="text-center text-gray-300 text-sm sm:text-base"
            itemprop="description"
          >
            Corrección rápida de errores que afectan tu <strong
              >SEO y rendimiento</strong
            >. Soluciones técnicas para problemas de indexación, errores 404, y
            más.
          </p>

          <div class="pt-3 border-t border-white/10">
            <ul class="text-sm sm:text-sm text-gray-400 space-y-1">
              <li class="flex items-center gap-2">
                <span class="text-green-400"><CheckCheck size={12} /></span>
                <span>Errores de indexación Google</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-400"><CheckCheck size={12} /></span>
                <span>Problemas de velocidad</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-green-400"><CheckCheck size={12} /></span>
                <span>Errores 404 y enlaces rotos etc..</span>
              </li>
            </ul>
          </div>
        </div>
      </article>

      <!-- 3. Optimización de Velocidad -->
      <article
        role="article"
        aria-label="Servicio de optimización de velocidad del sitio web para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-5 sm:p-6 md:p-8
          bg-gradient-to-br from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          hover:bg-gradient-to-br hover:from-white/15 hover:via-white/10 hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 hover:shadow-blue-500/15
          group cursor-pointer hover:-translate-y-1
          md:row-start-2"
      >
        <meta itemprop="category" content="Optimización Web" />

        <div
          class="absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden"
        >
          <LightRays client:only="react" count={7} blur={36} speed={12} />
        </div>

        <div class="relative z-10 space-y-3 sm:space-y-4">
          <div
            class="w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-gradient-to-br from-green-500/20 to-emerald-500/20
              border border-white/10 flex items-center justify-center mx-auto"
            aria-hidden="true"
          >
            <Zap size={40} className="sm:size-56 text-white/90" />
          </div>

          <div class="text-center">
            <ShinyButton
              client:only="react"
              textOnly
              className="pointer-events-none"
            >
              <h3
                class="text-xl sm:text-2xl md:text-3xl font-bold mb-1"
                itemprop="name"
              >
                Optimización Web
              </h3>
            </ShinyButton>
            <p class="text-green-400 text-sm font-semibold">Core Web Vitals</p>
          </div>

          <p
            class="text-center text-gray-300 text-sm sm:text-base"
            itemprop="description"
          >
            Mejora tus <strong>Core Web Vitals</strong> y el posicionamiento SEO.
            Tiempos de carga mínimos para mejor experiencia de usuario y ranking.
          </p>

          <div class="pt-3 border-t border-white/10">
            <div class="text-center">
              <p class="text-xs sm:text-sm text-gray-400 mb-2">
                Métricas clave que mejoramos:
              </p>
              <div
                class="flex justify-center gap-4 sm:gap-6 text-xs sm:text-sm"
              >
                <div class="text-center">
                  <div class="text-green-400 font-bold">LCP</div>
                  <div class="text-gray-500">‹ 2.5s</div>
                </div>
                <div class="text-center">
                  <div class="text-green-400 font-bold">FID</div>
                  <div class="text-gray-500">‹ 100ms</div>
                </div>
                <div class="text-center">
                  <div class="text-green-400 font-bold">CLS</div>
                  <div class="text-gray-500">‹ 0.1</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </article>

      <!-- 4. Mantenimiento Web -->
      <article
        role="article"
        aria-label="Servicio de mantenimiento y soporte web continuo para SEO"
        itemprop="offers"
        itemscope
        itemtype="https://schema.org/Offer"
        class="relative
          rounded-2xl sm:rounded-3xl p-5 sm:p-6
          flex flex-col
          bg-gradient-to-b from-white/10 via-white/5 to-transparent
          backdrop-blur-xl border border-white/20
          hover:bg-gradient-to-b hover:from-white/15 hover:via-white/10 hover:to-transparent
          transition-all duration-300
          shadow-xl shadow-blue-500/5 hover:shadow-blue-500/15
          group overflow-hidden cursor-pointer
          hover:-translate-y-1
          md:col-span-2 md:row-start-3
          lg:col-span-1 lg:row-start-1 lg:row-span-2"
      >
        <meta itemprop="category" content="Mantenimiento Web" />

        <div
          class="absolute inset-0 z-0 pointer-events-none rounded-2xl sm:rounded-3xl overflow-hidden"
        >
          <LightRays client:only="react" count={8} blur={40} speed={14} />
        </div>

        <div class="relative z-10">
          <p class="text-xs uppercase opacity-70 font-semibold tracking-wider">
            Mantenimiento Web Esencial
          </p>

          <ShinyButton
            client:only="react"
            textOnly
            className="pointer-events-none"
          >
            <h3
              class="text-xl sm:text-2xl md:text-3xl font-bold mt-1 mb-2"
              itemprop="name"
            >
              Soporte Continuo SEO
            </h3>
          </ShinyButton>

          <p
            class="mt-2 text-gray-300 text-sm sm:text-base leading-relaxed mb-4"
            itemprop="description"
          >
            Mantén tu sitio actualizado, seguro, rápido y <strong
              >optimizado para SEO</strong
            > sin interrupciones.
          </p>

          <!-- Imagen -->
          <div class="w-full flex justify-center mt-4 sm:my-6">
            <!-- Imagen -->
            <div class="w-full flex justify-center mt-4 sm:my-6">
              <img
                src="/images/maintenance_services.webp"
                alt="Servicio de mantenimiento web profesional para mantener SEO y seguridad"
                width="280"
                height="280"
                loading="lazy"
                class="w-full max-w-xs h-auto object-contain opacity-90
      drop-shadow-[0_0_16px_rgba(59,130,246,0.45)]
      transition-transform duration-300 group-hover:scale-105
      hidden sm:block"
                itemprop="image"
              />
            </div>
          </div>
        </div>

        <!-- Lista de beneficios SEO -->
        <ul
          class="relative z-10 mt-4 space-y-2 sm:space-y-3 text-gray-300 text-sm sm:text-[14px] leading-snug"
        >
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-base flex-shrink-0 mt-0.5"
              ><CircleCheck size={16} /></span
            >
            <span
              ><strong>Actualizaciones SEO:</strong> Plugins, CMS y optimizaciones
              mensuales</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-base flex-shrink-0 mt-0.5"
              ><CircleCheck size={16} /></span
            >
            <span
              ><strong>Seguridad y Monitoreo:</strong> Protección SEO y prevención
              de caídas</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-base flex-shrink-0 mt-0.5"
              ><CircleCheck size={16} /></span
            >
            <span
              ><strong>Optimización Continua:</strong> Rendimiento y respaldos automáticos</span
            >
          </li>
          <li class="flex items-start gap-2" itemprop="additionalProperty">
            <span class="text-green-400 text-base flex-shrink-0 mt-0.5"
              ><CircleCheck size={16} /></span
            >
            <span
              ><strong>Reportes SEO:</strong> Análisis mensual de posicionamiento
              y métricas</span
            >
          </li>
        </ul>

        <div class="relative z-10 mt-6 pt-4 border-t border-white/10">
          <a
            data-scroll="contact"
            class="block text-center text-blue-400 hover:text-blue-300 text-sm font-semibold transition-colors"
            aria-label="Más información sobre mantenimiento web para SEO"
          >
            Garantiza tu posicionamiento
          </a>
        </div>
      </article>
    </div>

    <!-- Microdatos SEO adicionales -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ItemList",
        itemListElement: [
          {
            "@type": "Service",
            position: 1,
            name: "Diseño y Desarrollo Web",
            description:
              "Diseño de landing pages y sitios web optimizados para SEO, conversiones y rendimiento",
            offers: {
              "@type": "Offer",
              category: "Desarrollo Web",
            },
          },
          {
            "@type": "Service",
            position: 2,
            name: "Mantenimiento Web SEO",
            description:
              "Soporte continuo para mantener sitios web actualizados, seguros y optimizados para buscadores",
            offers: {
              "@type": "Offer",
              category: "Mantenimiento Web",
            },
          },
          {
            "@type": "Service",
            position: 3,
            name: "Reparaciones Web Técnicas",
            description:
              "Corrección de errores que afectan el SEO y rendimiento de sitios web",
            offers: {
              "@type": "Offer",
              category: "Reparaciones Técnicas",
            },
          },
          {
            "@type": "Service",
            position: 4,
            name: "Optimización de Velocidad Web",
            description:
              "Mejora de Core Web Vitals y velocidad de carga para mejor posicionamiento SEO",
            offers: {
              "@type": "Offer",
              category: "Optimización Web",
            },
          },
        ],
      })}
    />
  </div>
</section>
